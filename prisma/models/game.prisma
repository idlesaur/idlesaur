model Profile {
  id         String   @id @default(cuid())
  public     Boolean  @default(false)
  bio        String
  user       User     @relation(fields: [userId], references: [id])
  userId     String   @unique
  userName   String?  @unique
  lastActive DateTime @default(now())
}

model Currency {
  id            String   @id @default(cuid())
  user          User     @relation(fields: [userId], references: [id])
  userId        String   @unique
  bones         Float    @default(0)
  lastBonesTick DateTime @default(now())
}

model Upgrades {
  id          String @id @default(cuid())
  user        User   @relation(fields: [userId], references: [id])
  userId      String @unique
  boneDiggers Int    @default(0)
}

model Dinosaur {
  id                  String   @id @default(cuid())
  user                User     @relation(fields: [userId], references: [id])
  userId              String   @unique
  alive               Boolean  @default(true)
  name                String
  experience          Int      @default(0)
  nextLevelExperience Int      @default(10)
  health              Int      @default(10)
  maxHealth           Int      @default(10)
  attack              Int      @default(5)
  defense             Int      @default(5)
  speed               Int      @default(5)
  type                DinoType @default(RAPTOR)
}

enum DinoType {
  RAPTOR
  TYRANNOSAURUS
}
