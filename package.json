{
  "name": "idle-game",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "prepare": "husky install",
    "precommit": "npx lint-staged --no-revert",
    "prepush": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:create": "prisma migrate dev --create-only",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:prod:reset": "dotenv -e .env.production -- prisma migrate reset",
    "prisma:prod:seed": "dotenv -e .env.production -- tsx prisma/seed.ts",
    "prisma:prod:deploy": "dotenv -e .env.production -- prisma migrate deploy",
    "prisma:preview:deploy": "dotenv -e .env.preview -- prisma migrate deploy",
    "prisma:preview:revert": "dotenv -e .env.preview -- prisma migrate resolve --rolled-back \"20250913213225_dino\"",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@floating-ui/react": "^0.27.16",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/adapter-pg": "^6.19.0",
    "@prisma/client": "^6.19.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "dotenv": "^17.2.3",
    "next": "15.6.0-canary.58",
    "next-auth": "5.0.0-beta.29",
    "pg": "^8.16.3",
    "prisma": "^6.19.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-hook-form": "^7.68.0",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.4.0",
    "tsx": "^4.21.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.13",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@eslint/eslintrc": "^3.3.3",
    "@storybook/addon-a11y": "^9.1.16",
    "@storybook/addon-docs": "^9.1.16",
    "@storybook/addon-vitest": "^9.1.16",
    "@storybook/nextjs": "^9.1.16",
    "@storybook/nextjs-vite": "^9.1.16",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.39.1",
    "eslint-config-next": "15.5.2",
    "eslint-plugin-storybook": "^9.1.16",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.4",
    "msw-storybook-addon": "^2.0.6",
    "playwright": "^1.57.0",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.6.14",
    "storybook": "^9.1.16",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,css,md}": "prettier --write"
  },
  "type": "module",
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}